CREATE TABLE CLIENTE( 
    CD_CLIENTE NUMBER (4), 
    NM_CLIENTE VARCHAR (50), 
    DS_ENDERECO VARCHAR (70), 
    CD_MUNICIPIO NUMBER (5), 
    SG_ESTADO CHAR (2), 
    NR_CEP VARCHAR (8), 
    NR_DDD NUMBER (3), 
    NR_FONE NUMBER (7), 
    IE_SEXO CHAR (1), 
    CONSTRAINT CLIENTE_CD_CLIENTE_PK PRIMARY KEY (CD_CLIENTE) 
);

SELECT * FROM CLIENTE;

CREATE TABLE ESTADO(
    SG_ESTADO CHAR (2),
    NM_ESTADO VARCHAR2(35),
    CONSTRAINT ESTADO_SG_ESTADO_PK PRIMARY KEY (SG_ESTADO),
    CONSTRAINT ESTADO_NM_ESTADO_UN UNIQUE (NM_ESTADO)
);

INSERT INTO ESTADO (SG_ESTAD0, NM_ESTADO) VALUES ('SP', 'S√ÉO PAULO');
INSERT INTO ESTADO (SG_ESTAD0, NM_ESTADO) VALUES ('RJ', 'RIO DE JANEIRO');

ALTER TABLE CLIENTE ADD CONSTRAINT CLIENTE_SG_ESTADO_FK FOREIGN KEY (SG_ESTADO) REFERENCES ESTADO (SG_ESTADO); /*CHAVE ESTRANGEIRA*/
ALTER TABLE CLIENTE ADD CONSTRAINT CLIENTE_IE_SEXO_CK CHECK (IE_SEXO IN ('M', 'F')); /* CONSTRAINT CHECK*/